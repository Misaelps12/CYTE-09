<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:padding="16dp"
    tools:context=".PatronesActivity">

    <TextView
        android:id="@+id/titlePatrones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Patrones Disponibles"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subtitlePatrones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Selecciona un patrón para visualizar"
        android:textAlignment="center"
        android:textColor="#E3F2FD"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titlePatrones"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitlePatrones">

        <!-- Patrón 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#F44336">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/control"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Patrón 1"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/Patron1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acceder"
                    android:textAllCaps="false"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#F44336"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:elevation="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Patrón 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#FF9800">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/control"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Patrón 2"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/Patron2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acceder"
                    android:textAllCaps="false"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#FF9800"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:elevation="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Patrón 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#9C27B0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/control"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Patrón 3"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/Patron3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acceder"
                    android:textAllCaps="false"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#9C27B0"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:elevation="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Patrón 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#BA68C8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/control"
                    android:layout_marginEnd="16dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Patron 4"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/Patron4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acceder"
                    android:textAllCaps="false"
                    android:backgroundTint="#FFFFFF"
                    android:textColor="#9C27B0"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:elevation="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>