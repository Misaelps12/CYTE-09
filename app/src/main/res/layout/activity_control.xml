<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:padding="16dp"
    tools:context=".ActivityControl">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Panel de Control"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"/>

    <!-- Control Pad -->
    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondo3">

            <Button
                android:id="@+id/btnUp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="24sp"
                android:background="@drawable/flechaarriba"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                />


            <Button
                android:id="@+id/btnLeft"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="24sp"
                android:background="@drawable/flechaizquierda"
                android:layout_below="@id/btnUp"
                android:layout_toLeftOf="@id/btnUp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                />


            <Button
                android:id="@+id/btnRight"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="24sp"
                android:background="@drawable/flechaderecha"
                android:layout_below="@id/btnUp"
                android:layout_toRightOf="@id/btnUp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                />


            <Button
                android:id="@+id/btnDown"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textSize="24sp"
                android:background="@drawable/flechaabajo"
                android:layout_below="@id/btnLeft"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                />


            <View
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/circulo"
                android:layout_centerInParent="true"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>